{
	"name": "vscode-php-file-link",
	"displayName": "PHP File Link",
	"description": "Creates links to other PHP files declared as strings.",
	"version": "0.2.0",
	"publisher": "pwarchol",
	"repository": {
		"type": "git",
		"url": "https://github.com/pwarchol/vscode-php-file-link"
	},
	"keywords": [
		"php",
		"file",
		"link",
		"path"
	],
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:php"
	],
	"contributes": {
		"configuration": {
			"title": "PHP File Link",
			"properties": {
				"phpFileLink.supportedExtensions": {
					"type": "array",
					"default": [
						"php",
						"ini",
						"log"
					],
					"description": "List of file extensions that can be linked"
				},
				"phpFileLink.linkMode": {
                    "type": "string",
                    "enum": [
                        "active_document",
                        "scan_workspace"
                    ],
                    "default": "scan_workspace",
                    "description": "Method of resolving paths to files",
					"enumDescriptions": [
						"Resolving path based on active document directory",
						"Scanning all workspace files"
					]
                }
			}
		}
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.30.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {}
}
